<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/awhite"
    android:fitsSystemWindows="true"
    android:id="@+id/root"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="0px"
            android:id="@+id/btn_all"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/block_msg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/T_main"
                    android:textSize="16sp"
                    android:id="@+id/txt_all"
                    android:text="已被预约"/>
            </LinearLayout>
    
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignRight="@id/block_msg"
                android:layout_alignLeft="@id/block_msg"
                android:background="@color/T_main"
                android:id="@+id/label_all"
                android:layout_below="@id/block_msg"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0px"
            android:id="@+id/btn_mine"
            android:clickable="true"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/T_main"
                android:textSize="16sp"
                android:id="@+id/txt_mine"
                android:text="我的预约"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignRight="@id/txt_mine"
                android:layout_alignLeft="@id/txt_mine"
                android:background="@color/T_main"
                android:id="@+id/label_mine"
                android:layout_below="@id/txt_mine"/>
        </RelativeLayout>
    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/viewpager"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>
